<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding ="10dp"
    android:background="@drawable/background"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="327dp"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo_black_big" />

    <TextView
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="50dp"
        android:text="Sign in"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/email_Input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password_Input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:padding="5dp"
        android:background="@drawable/input_bg"
        />

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btn_forgetPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/fp_underline"
            android:textColor="@color/grey"
            android:textAllCaps="false"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            />

        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="@string/su_underline"
            android:textColor="@color/blue"
            android:textAllCaps="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_visitor"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/btn3_bg"
        android:text="Access as a visitor"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="12sp" />

</LinearLayout>